{
    
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Current Opened File",
            "outputCapture": "std",
            "program": "${file}"
        }
    ]
}